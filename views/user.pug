extends layout.pug

block content
  .profile-cover
    .profile-cover-img(style='background-image: url(/static/source/images/background.jpg)')
    .media
      .media-left
        a.profile-thumb(href='#')
          if usuario
            img.img-circle.img-md(src='https://s3.amazonaws.com/'+usuario.bucket+'/'+usuario.avatar alt=usuario.name)
          else
            img.img-circle.img-md(src='/static/source/images/default.png')
      .media-body
        h1
          =usuario ? usuario.name : 'No se encontro usuario'
          small.display-block=usuario ? usuario.phone : 'Sin telefono'
